{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "DEBUG",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                // "-fsanitize=address",
                "-fsanitize=undefined",
                "-fsanitize=null",
                "-fno-omit-frame-pointer",
                // "-Og",
                "-O0",
                "-g",
                "${file}",
                "-D",
                "DEBUG",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.test",
                "-std=c++23",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: /usr/bin/g++"
        },
